! relaxation of Zinc vacancy with minus 2 charge defect
&CONTROL
calculation    =  'vc-relax', ! variable-cell relaxation
etot_conv_thr  =  1.d-5,      ! total energy convergence in Ry
forc_conv_thr  =  1.d-4,      ! net force convergence in Ry/bohr
outdir         =  '/scratch1/christian.llemit/tmp/ZnO/relax/Zn_vac-n2',
prefix         =  'Zn_vac-n2',
pseudo_dir     =  '/home/christian.llemit/PP/GBRV',
tprnfor        =  .true.,
tstress        =  .true.,
verbosity      =  'high',
/

&SYSTEM
celldm(1)   =  18.61865901, ! first crystallographic constant in bohr
degauss     =  0.001,
ecutrho     =  720.0,
ecutwfc     =  90,
ibrav       =  0,  ! crystal axis provided in CELL_PARAMETERS
nat         =  71, ! 72 atoms -> perfect crystal
ntyp        =  2,
occupations =  'smearing',
smearing    =  'gauss',  ! smearing type
tot_charge  =  -2,       ! 0 -> neutral system; +x -> x electrons removed; else -> x electrons added                       
/

&ELECTRONS
conv_thr      =  1d-06,
mixing_mode   = 'plain'  ! charge density Broyden mixing
mixing_beta   =  0.4d0,
startingpot   = 'atomic' ! starting potential from atomic charge superposition
startingwfc   = 'atomic+random' ! starting KS orbital from superposition of atomic orbitals plus a superimposed "randomization" of atomic orbitals
diagonalization = 'david'       ! Davidson iterative scf matrix diagonalization with overlapping
/

&IONS                    ! needed if calculation = 'vc-relax'
ion_dynamics   = 'bfgs'  ! optimization using BFGS quasi-newton algorithm
pot_extrapolation = 'atomic' ! extrapolate potential from preceding ionic steps as a sum of atomic-like orbitals
/

&CELL                    ! needed if calculation = 'vc-relax'
cell_dynamics = 'bfgs'   ! same as ion_dynamics but acting on unit/supercell
cell_dofree   = 'all'    ! all lattice axis and angles are moved
press_conv_thr = 0.5d0   ! convergence threshold on the pressure in kbar
/

ATOMIC_SPECIES 
Zn    65.39   zn_pbe_v1.uspp.F.UPF 
O    15.9994   o_pbe_v1.2.uspp.F.UPF 

